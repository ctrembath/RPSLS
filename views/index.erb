<!doctype>
<html>
  <head>
    <title>aloe on aloe.</title>
       <link rel="shortcut icon" type="image/ico" href="images/favicon.ico"/>
  </head>
    <br>
    <style>
    
    body {
      background-image: url(images/water.gif);
      font-family: Impact, Charcoal, sans-serif;
      font color: blue
      margin: 15px 0 0 30px;
    }

    .choices img {
      width: 15%;
      margin-right: 2.5%;
      cursor: pointer;
      opacity: 3;
      transition: 1s all ease;
    }

    .choices img:hover {
      opacity: 0.5;

    }

    audio {
      display: none;
    }

    .header{
      background-image: url("images/aloheader.png");
      max-width: 670px;
      height: 100px;
      background-repeat: no-repeat;
      background-size: contain;

    }

    h2, h3 {
      text-transform: capitalize;
      font-family: "lucida grande", tahoma, verdana, arial, sans-serif;
      font-weight: 8000;
      font color: #00FF7F;
    }

    #results {
      list-style: none;
    }

    #results li {
      background-image: url(images/bar.png);
      opacity: 0.8;
      color: #fff;
      font-size: 24px;
      border-radius: 8px;
      padding: 5px;
      width: 80%;
      margin-bottom: 10px;
      display:none;

    }

    #video-container {
  margin: 2em auto 0;
  width: 500px;
  padding: 2em;
  background: white;
  -webkit-box-shadow: 0 1px 10px #D9D9D9;
  -moz-box-shadow: 0 1px 10px #D9D9D9;
  -ms-box-shadow: 0 1px 10px #D9D9D9;
  -o-box-shadow: 0 1px 10px #D9D9D9;
  box-shadow: 0 1px 10px #D9D9D9;
}

    </style>
  </head>
  <center>
  <body>
     <div class= "header">
    </div>
   
    <div id="video-container">
    <video id="camera-stream" width="500" autoplay></video>
    </div>
    <br>
    
    <br>
    <br>
    <br>

    <div class='choices'>
      <img src="images/aloe1.jpg" data-pick='rock'>
      <img src="images/aloe2.jpg" data-pick='paper'>
      <img src="images/aloe3.jpg" data-pick='scissors'>
      <img src="images/aloe 4.jpg" data-pick='lizard'>
      <img src="images/alotones.jpg" data-pick='spock'>
    </div>
    <ul id="results">
    </ul>

     <audio loop="loop" autoplay="autoplay" hidden="true">
      <source src="audio/fresh.mp3" type="audio/mp3">
      </audio>

    <template id='list-item-template'>
      <li>{{message}}</li>
    </template>

    <script src='lib/Player.js'></script>
    <script src='lib/Game.js'></script>
    <script src='lib/jquery-2.1.1.min.js'></script>
    <script src='lib/mustache.min.js'></script>
    <script>

            if (navigator.getUserMedia) {
        // Request the camera.
        navigator.getUserMedia(
          // Constraints
          {
            video: true
          },

          // Success Callback
          function(localMediaStream) {

          },

          // Error Callback
          function(err) {
            // Log the error to the console.
            console.log('The following error occurred when trying to use getUserMedia: ' + err);
          }
        );

      } else {
        alert('Sorry, your browser does not support getUserMedia');
      }
 

      $(document).ready(function() {
        var remove = function(){
          $(this).remove();
        };
        var render = function(game) {
          var html = $('#list-item-template').html();
          var data = {message: game.winningMessage()};
          return Mustache.render(html,data);
        }
        var clare = new Player('you');
        var computer = new Computer('DR alo');
        var game = new Game(clare, computer)

        $('.choices img').on('click',function(){

          clare.picks($(this).data('pick'));
          computer.picks();
          var rendered = Mustache.render($('#list-item-template').html(),{message: game.winningMessage()});
          $(render(game)).prependTo('#results').fadeIn(300);
          $('li:nth-child(5)').fadeOut(300,remove)
           });

        });

  
    </script>

  </body>
</html>